<style lang="scss">
  .footer {
    width: 100%;
    padding: 15px 0;
    margin: 150px 0 0;
    background: var(--c-text);
    position: relative;
    @include mq(md) {
      position: absolute;
      bottom: 0;
      left: 0;
    }
  }
  .small {
    color: var(--c-bg);
    font-size: 1.4rem;
    text-align: center;
    display: block;
    position: relative;
  }
  .waves {
    width: 100%;
    height: 40px;
    color: var(--c-text);
    position: absolute;
    bottom: 100%;
    left: 0;
    z-index: -1;
  }
  .waves use {
    animation: move-forever-wave 25s cubic-bezier(0.55, 0.5, 0.45, 0.5) infinite;
    animation-delay: -2s;
    animation-duration: 7s;
  }
  .ships {
    width: 60px;
    color: var(--c-text);
    position: absolute;
    bottom: 145%;
    right: 10%;
    z-index: -1;
    animation: move-forever-ship 25s ease-in-out infinite;
    animation-delay: -6.5s;
    animation-duration: 7s;
    @include mq(md) {
      width: 80px;
      animation-delay: -6.2s;
      bottom: 140%;
    }
  }
  @keyframes move-forever-wave {
    0% {
      transform: translate3d(-90px, 0, 0);
    }
    100% {
      transform: translate3d(85px, 0, 0);
    }
  }
  @keyframes move-forever-ship {
    0% {
      transform: translate3d(0, 5px, 0) rotate(-6deg) scale(-1, 1);
    }
    50% {
      transform: translate3d(-20px, 30px, 0) rotate(-10deg) scale(-1, 1);
    }
    100% {
      transform: translate3d(0, 5px, 0) rotate(-6deg) scale(-1, 1);
    }
  }
</style>
